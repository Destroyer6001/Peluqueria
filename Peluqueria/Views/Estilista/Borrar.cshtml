@model EstilistaViewModel
@{
    ViewData["Title"] = "Borrar";
}

<div class="row">
    <div class="col-md-8  offset-md-2 by-10" id="BorrarEstilista">
        <div class="row" id="TituloBorrarEstilista">
            <h1>Borrar </h1>
        </div>
        <div class="row" id="SubtituloBorrarEstilista">
            <h3 class="mb-3">¡Esta seguro que desea borrar al estilista @Model.Nombre</h3>
        </div>
        <div class="row" id="FormularioBorrarEstilista">
            <form asp-action="BorrarEstilista">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn" id="BotonBorrarEstilista">Borrar</button>
                <a class="btn" asp-action="Index" id="botonCancelarBorrarEstilista">Cancelar</a>
            </form>
        </div>
    </div>
</div>
