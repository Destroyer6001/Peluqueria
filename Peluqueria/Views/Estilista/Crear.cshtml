@model EstilistaViewModel
@{
    ViewData["Title"] = "Crear Estilista";
}
<div class="row">
    <div class="col-md-8  offset-md-2 by-10" id="CrearEstilista">
        <div class="row" id="TituloCrearEstilista">
            <h1>Crear Estilista</h1>
        </div>

        <div class="row" id="SubtituloCrearEstilista">
            <h5>Los estilistas son aquellos que se encargan de prestar los servicios dentro de la peluqueria</h5>
        </div>

        <div class="row" id="FormularioCrearEstilista">
            <form asp-action="Crear">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label"></label>
                    <input asp-for="Nombre" class="form-control" id="CampoEstilistaCrear" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Edad" class="form-label"></label>
                    <input asp-for="Edad" class="form-control" id="CampoEstilistaCrear" />
                    <span asp-validation-for="Edad" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DocumentoDeIdentidad" class="form-label"></label>
                    <input asp-for="DocumentoDeIdentidad" class="form-control" id="CampoEstilistaCrear" />
                    <span asp-validation-for="DocumentoDeIdentidad" class="text-danger"></span>
                </div>

                <button class="btn" id="CrearEstilistaBoton">Enviar</button>
                <a class="btn" id="CrearEstilistaCancelar" asp-action="Index">Cancelar</a>
            </form>
        </div>
    </div>
</div>


@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}
